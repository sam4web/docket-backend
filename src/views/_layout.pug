block variables
doctype html
html(lang="en")
    head
        meta(charset="utf-8")
        meta(http-equiv="X-UA-Compatible", content="IE=edge")
        meta(name="viewport", content="width=device-width, initial-scale=1.0, maximum-scale=1.0, user-scalable=0")
        title #{title}
        link(href="styles/main.min.css", rel="stylesheet")
        link(rel="icon" type="image/png" href="images/logo.png")
    body
        main(class="size-full min-h-screen bg-slate-200 flex-center sm:p-5")
            div(class="w-screen h-screen sm:w-[94vw] sm:h-[96vh] lg:h-[92vh]")
                div(class="size-full bg-white sm:shadow-sm flex sm:rounded-2xl flex-col-reverse sm:flex-row")
                    block content

